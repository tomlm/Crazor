@using AdaptiveCards
@using Microsoft.AspNetCore.Components;
@using System.ComponentModel;
@inherits ElementComponent<AdaptiveElement>

<ac:UnknownElement @attributes="@GetAttributes()">
    <CascadingValue Name="ParentItem" Value="@Item">@ChildContent</CascadingValue>
</ac:UnknownElement>

@code
{

    [Parameter]
    public BoolProperty? IsVisible { get; set; }

    [Parameter]
    public BoolProperty? Separator { get; set; }

    [Parameter]
    [DefaultValue(typeof(AdaptiveSpacing), "Default")]
    public AdaptiveSpacing Spacing { get; set; }

    [Parameter]
    public String? Height { get; set; }
}
