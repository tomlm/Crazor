@using Crazor.AdaptiveCards
@using Microsoft.AspNetCore.Components;
@inherits ItemComponent<AdaptiveSelectAction>
@implements IChildItem

<ac:SelectAction @attributes="@GetAttributes()">
    <CascadingValue Name="ParentItem" Value="@Item">@ChildContent</CascadingValue>
</ac:SelectAction>

@code
{
    public virtual void AddToParent()
    {
        ArgumentNullException.ThrowIfNull(ParentItem);

        if (this.ParentItem is AdaptiveCard card)
        {
            card.SelectAction = Item;
        }
        else if (this.ParentItem is AdaptiveCollectionElement collection)
        {
            collection.SelectAction = Item;
        }
        else if (this.ParentItem is AdaptiveImage image)
        {
            image.SelectAction = Item;
        }
        else if (this.ParentItem is AdaptiveTextRun textrun)
        {
            textrun.SelectAction = Item.Action;
        }
    }
}
