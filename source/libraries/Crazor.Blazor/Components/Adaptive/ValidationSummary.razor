@using Crazor.Interfaces;
@using AC=global::Crazor.AdaptiveCards;

@foreach(var ve in CardView.ValidationErrors)
{
    @foreach (var error in ve.Value)
    {
        <TextBlock Spacing="@AC.AdaptiveSpacing.None" Color="@AC.AdaptiveTextColor.Attention">@error</TextBlock>
    }
}

@code
{
    [CascadingParameter(Name = "CardView")]
    public ICardView CardView { get; set; }
}