@using global::AdaptiveCards
@using Microsoft.AspNetCore.Components;
@using System.ComponentModel;
@inherits ActionComponent<AdaptiveOpenUrlAction>

<ac:Action.OpenUrl @attributes="@GetAttributes()">
    <CascadingValue Name="ParentModel" Value="@Model">@ChildContent</CascadingValue>
</ac:Action.OpenUrl>

@code
{

    [Parameter]
    public String IconUrl { get => Model.IconUrl; set => Model.IconUrl = value; }

    [Parameter]
    public Boolean? IsEnabled { get => Model.IsEnabled; set => Model.IsEnabled = value ?? true; }

    [Parameter]
    [DefaultValue(typeof(AdaptiveActionMode), "Primary")]
    public AdaptiveActionMode Mode { get => Model.Mode; set => Model.Mode = value; }

    [Parameter]
    [DefaultValue(typeof(AdaptiveActionStyle), "Default")]
    public AdaptiveActionStyle Style { get => Model.Style; set => Model.Style = value; }

    [Parameter]
    public String Title { get => Model.Title; set => Model.Title = value; }

    [Parameter]
    public String Tooltip { get => Model.Tooltip; set => Model.Tooltip = value; }

    [Parameter]
    public String Url { get => Model.Url; set => Model.Url = value; }
}
