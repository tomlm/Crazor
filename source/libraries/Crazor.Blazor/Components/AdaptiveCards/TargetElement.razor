@using global::AdaptiveCards
@using Microsoft.AspNetCore.Components;
@using System.ComponentModel;
@inherits ItemComponent<AdaptiveTargetElement>

<ac:TargetElement @attributes="@GetAttributes()">
    <CascadingValue Name="ParentModel" Value="@Model">@ChildContent</CascadingValue>
</ac:TargetElement>

@code
{

    [Parameter]
    public string ElementId { get => Model.ElementId; set => Model.ElementId = value; }

    [Parameter]
    [DefaultValue(null)]
    public bool? IsVisible { get=>Model.IsVisible; set=>Model.IsVisible = value ?? true; }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);

    }
}
