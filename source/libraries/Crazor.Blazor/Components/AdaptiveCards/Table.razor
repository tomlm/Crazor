@using global::AdaptiveCards
@using Microsoft.AspNetCore.Components;
@using System.ComponentModel;
@inherits ElementComponent<AdaptiveTable>

<ac:Table @attributes="@GetAttributes()">
    <CascadingValue Name="ParentModel" Value="@Model">@ChildContent</CascadingValue>
</ac:Table>

@code
{
    [Parameter]
    public Boolean? FirstRowAsHeaders { get => Model.FirstRowAsHeaders; set => Model.FirstRowAsHeaders = value ?? true; }

    [Parameter]
    [DefaultValue(typeof(AdaptiveContainerStyle), "Default")]
    public AdaptiveContainerStyle GridStyle { get => Model.GridStyle; set => Model.GridStyle = value; }

    [Parameter]
    [DefaultValue(typeof(AdaptiveHorizontalAlignment), "Left")]
    public AdaptiveHorizontalAlignment HorizontalCellContentAlignment { get => Model.HorizontalCellContentAlignment; set => Model.HorizontalCellContentAlignment = value; }

    [Parameter]
    public Boolean? IsVisible { get => Model.IsVisible; set => Model.IsVisible = value ?? true; }

    [Parameter]
    public Boolean? Separator { get => Model.Separator; set => Model.Separator = value ?? false; }

    [Parameter]
    public Boolean? ShowGridLines { get => Model.ShowGridLines; set => Model.ShowGridLines = value ?? true; }

    [Parameter]
    [DefaultValue(typeof(AdaptiveSpacing), "Default")]
    public AdaptiveSpacing Spacing { get => Model.Spacing; set => Model.Spacing = value; }

    [Parameter]
    [DefaultValue(typeof(AdaptiveVerticalAlignment), "Top")]
    public AdaptiveVerticalAlignment VerticalCellContentAlignment { get => Model.VerticalCellContentAlignment; set => Model.VerticalCellContentAlignment = value; }

    [Parameter]
    public String Height { get => Model.Height?.ToString(); set => Model.Height = value; }
}
