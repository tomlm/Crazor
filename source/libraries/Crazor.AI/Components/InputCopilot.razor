@using Crazor.AdaptiveCards
@using Crazor.Blazor.Components.Adaptive

    <TextBlock Style="AdaptiveTextBlockStyle.Heading" Text="Copilot" />
    <InputText Id="COPILOTTEXT" Label="" Placeholder="@Placeholder" Spacing="AdaptiveSpacing.Small" IsMultiline="true">
        <ActionExecute Verb="@COPOILOT_VERB" IconUrl="@IconUrl" Title="@Title" />
    </InputText>
@code
{
    public const string COPILOT_TEXT = "copilotText";
    public const string COPOILOT_VERB = "OnCopilot";

    [Parameter]
    public string Placeholder { get; set; } = "I can help you fill out this form. Paste or type in any information you have.";

    [Parameter]
    public string Title { get; set; } = "Copilot can help";

    [Parameter]
    public string IconUrl { get; set; } = "https://r.bing.com/rp/R8ErSC7kK_3o4eRM-pP2JlReVkE.png";

    [Parameter]
    public bool Separator { get; set; } = true;

}