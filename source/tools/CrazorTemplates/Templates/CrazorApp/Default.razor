@inherits CardView<AppTemplateApp>

<Card Version="1.4">
    <TextBlock Size="AdaptiveTextSize.Large">Hello AppTemplateApp!</TextBlock>
    <TextBlock>Counter:@Counter</TextBlock>

    <ActionSet>
        <ActionExecute Title="Increment" Verb="@nameof(OnIncrement)" />
    </ActionSet>
</Card>

@code {
    public int Counter { get; set; }

    public void OnIncrement()
    => this.Counter++;
}
