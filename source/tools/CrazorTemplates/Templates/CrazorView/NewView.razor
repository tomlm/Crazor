@inherits CardView

<Card Version="1.4">
    <TextBlock Size="AdaptiveTextSize.Large">Hello NewView!</TextBlock>
    <TextBlock>Counter:@Counter</TextBlock>

    <ActionExecute Title="Increment" Verb="@nameof(OnIncrement)" />
</Card>

@code {
    public int Counter { get; set; }

    public void OnIncrement()
        => this.Counter++;
}
