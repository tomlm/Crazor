@using SharedCards.Cards.Inputs
@inherits CardView<CardApp,InputsModel>

<Card Version="1.4">
    <TextBlock Style="AdaptiveTextBlockStyle.Heading">Edit Values!</TextBlock>

    <InputDate Binding="Model.Birthday" Max="@DateTime.Now.ToString("yyyy-MM-dd")" />
    <InputTime Binding="Model.ArrivalTime" Min="@DateTime.Now.ToString("yyyy-MM-dd")" />
    <InputNumber Binding="Model.Percent" />
    <InputNumber Binding="Model.Attendees" />
    <InputText Binding="Model.PhoneNumber" />
    <InputText Binding="Model.Password" />
    <InputToggle Binding="Model.IsCool" />
    <InputChoiceSet Binding="Model.FavoritePet" />

    <ActionCancel />
    <ActionOK />
</Card>

