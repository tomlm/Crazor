@attribute [OAuthConnection]
@attribute [CommandInfo("Auth2", "Add a Auth2 card")]
@inherits CardView

<CascadingAuthenticationState>
    <Card Version="1.4">
        <AuthorizeView>
            <Authorized>
                <TextBlock>User is: @User.GetDisplayName()</TextBlock>
                <TextBlock>User isAdmin: @User.IsInRole("Admin")</TextBlock>
            </Authorized>
            <NotAuthorized>
                <TextBlock>User is: Unknown</TextBlock>
                <ActionLogin/>
            </NotAuthorized>
        </AuthorizeView>
    </Card>
</CascadingAuthenticationState>
