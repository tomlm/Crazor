
@inherits CardView
@attribute [CardRoute("{PersonName?}")]
<Card Version="1.4">
    @if (!String.IsNullOrEmpty(PersonName))
    {
        <TextBlock>Hello @PersonName !</TextBlock>
    }
    @if (!String.IsNullOrEmpty(Color))
    {
        <TextBlock>Your color is @Color!</TextBlock>
    }
    <ActionExecute Verb="OnQuery" Title="pass color via ?color=red query Parameter" />
    <ActionExecute Verb="OnRoute" Title="pass Fred via /Cards/FromRoute/Joe card route " />
</Card>

@code
{
    [Required]
    [FromCardRoute]
    public string PersonName { get; set; }

    [FromCardQuery]
    public string Color { get; set; }

    public void OnQuery()
        => ShowView("?color=red");

    public void OnRoute()
        => ShowView("Fred");


}