@page "/Cards/{*route}"
@inject NavigationManager MyNavigationManager
@using Crazor.Blazor.Components

<CardViewer CardRoute="@($"/Cards/{Route}")" OnCardRouteChanged="OnCardRouteChanged" />

@code {
    [Parameter]
    public string? Route { get; set; }

    public void OnCardRouteChanged(string cardRoute)
    {
        MyNavigationManager.NavigateTo(cardRoute);
    }
}

