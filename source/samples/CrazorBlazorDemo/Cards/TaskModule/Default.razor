@using CrazorBlazorDemo.Cards.TaskModule
@inherits CardView<TaskModuleApp>
@attribute [CommandInfo("Test Task Module", "Test general task module functionality")]
@attribute [TaskInfo("Test Task Module", "small","small")]

<Card Version="1.5">
    @if (IsPreview)
    {
        <TextBlock Size="AdaptiveTextSize.Large">(PREVIEW)</TextBlock>
    }
    <TextBlock>Counter is @App.Counter!</TextBlock>
    <ActionExecute Verb="@nameof(OnIncrement)" Title="Increment" />
</Card>

@code {
    public void OnIncrement() 
        => App.Counter++;

    public void OnEdit()
        => ShowView("Edit");
}