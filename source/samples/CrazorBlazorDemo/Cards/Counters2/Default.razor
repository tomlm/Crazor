@using CrazorBlazorDemo.Cards.Counters2
@inherits CardView<Counters2App>

<Card Version="1.5">
    <TextBlock Size="AdaptiveTextSize.ExtraLarge" Weight="AdaptiveTextWeight.Bolder">Counters</TextBlock>
    <TextBlock Size="AdaptiveTextSize.Large">App Counter:@App.AppCounter</TextBlock>

    <ActionSet>
        <ActionExecute Title="+ App" Verb="@nameof(OnIncrementApp)" />
        <ActionExecute Title="- App" Verb="@nameof(OnDecrementApp)" />
    </ActionSet>

    <TextBlock Size="AdaptiveTextSize.Large">Session Counter:@Counter</TextBlock>
    <ActionSet>
        <ActionExecute Title="+ Session" Verb="@nameof(OnIncrement)" />
        <ActionExecute Title="- Session" Verb="@nameof(OnDecrement)" />
    </ActionSet>

</Card>

@code {
    public int Counter { get; set; }

    public void OnIncrement()
        => this.Counter++;

    public void OnDecrement()
        => this.Counter--;

    public void OnIncrementApp()
        => App.AppCounter++;

    // verb handlers can be sync or async.
    public async Task OnDecrementApp()
    {
        await Task.CompletedTask;
        App.AppCounter--;
    }
}

