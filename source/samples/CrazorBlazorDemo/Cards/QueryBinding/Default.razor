@inherits CardView

<Card Version="1.5" Title="Query Binding">
    <TextBlock Style="AdaptiveTextBlockStyle.Heading">Query Binding</TextBlock>
    <TextBlock>This card shows how you can initialize parameters in your view from query parameters</TextBlock>
    <TextBlock Wrap="true">Name and Zip have [FromQuery] attribute which allows it to be initialized from query paraemter ?name=&amp;zip=</TextBlock>

    <InputText Binding="Name" />
    <InputText Binding="Zip" />
    <InputText Binding="City" />

    <ActionExecute Verb="OnCancel" Title="Cancel" />
    <ActionExecute Verb="OnOK" Title="OK"/>
</Card>

@code {
    [FromQuery]
    [BindProperty]
    public string Name { get; set; }

    [FromQuery]
    [BindProperty]
    public string Zip { get; set; }

    [BindProperty]
    public string City { get; set; }

    public void OnLoadRoute(string name, string zip, string city)
    {
        
    }

    public void OnOK()
    {
    }
}