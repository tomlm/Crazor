@using Microsoft.AspNetCore.Mvc;

@inherits CardView
@attribute [CardRoute("{Name?}")]
<Card Version="1.5">
    @if (!String.IsNullOrEmpty(Name))
    {
        <TextBlock>Hello @Name!</TextBlock>
    }
    @if (!String.IsNullOrEmpty(Color))
    {
        <TextBlock>Your color is @Color!</TextBlock>
    }
    <ActionExecute Verb="OnQuery" Title="pass color via ?color=red query Parameter" />
    <ActionExecute Verb="OnRoute" Title="pass Fred via /Cards/FromRoute/Joe card route " />
</Card>

@code
{
    [Required]
    public string Name { get; set; }

    [FromCardQuery]
    public string Color { get; set; }

    public void OnQuery()
        => ShowView("?color=red");

    public void OnRoute()
        => ShowView("Fred");


}