@using CrazorBlazorDemo.Cards.ProductCatalog
@inherits CardView<ProductCatalogApp, EditOrAddProductCatalogItem>

<Card Version="1.5">
    @if (Model.IsEdit)
    {
        <TextBlock Size="AdaptiveTextSize.ExtraLarge">Edit Catalog Item</TextBlock>
    }
    else
    {
        <TextBlock Size="AdaptiveTextSize.ExtraLarge">Add Catalog Item</TextBlock>
    }
    <InputText Binding="Model.Item.Name"  />
    <InputText Binding="Model.Item.Description" />
    <InputNumber Binding="Model.Item.Price" />
    <InputText Binding="Model.Item.PictureUri" Label="Picture Url" ErrorMessage="The Picture Url is required." />

    <ActionExecute Verb="OnCancel" Title="Cancel" />
    <ActionExecute Verb="OnOK" Title="Save" />
</Card>

