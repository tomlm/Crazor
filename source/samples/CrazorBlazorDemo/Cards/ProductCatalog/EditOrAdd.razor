@using CrazorBlazorDemo.Cards.ProductCatalog
@inherits CardView<ProductCatalogApp, EditOrAddProductCatalogItem>

<Card Version="1.5">
    @if (Model.IsEdit)
    {
        <TextBlock Size="ExtraLarge">Edit Catalog Item</TextBlock>
    }
    else
    {
        <TextBlock Size="ExtraLarge">Add Catalog Item</TextBlock>
    }
    <Input.Text Binding="Model.Item.Name"  />
    <Input.Text Binding="Model.Item.Description" />
    <Input.Number Binding="Model.Item.Price" />
    <Input.Text Binding="Model.Item.PictureUri" Label="Picture Url" ErrorMessage="The Picture Url is required." />

    <Action.Execute Verb="OnCancel" Title="Cancel" />
    <Action.Execute Verb="OnOK" Title="Save" />
</Card>

