@using CrazorBlazorDemo.Cards.ProductCatalog
@inherits CardView<ProductCatalogApp,ProductCatalogItem>

<Card Version="1.5">

    <TextBlock Size="AdaptiveTextSize.ExtraLarge" Weight="AdaptiveTextWeight.Bolder">@Model.Name</TextBlock>

    <TextBlock Size="AdaptiveTextSize.Medium" Id="DescriptionHeading" Label="Description" />
    <TextBlock Id="Description">@Model.Description</TextBlock>

    <TextBlock Size="AdaptiveTextSize.Medium" Id="PriceHeading" Label="Price" />
    <TextBlock Id="Price">@Model.Price</TextBlock>

    <Image Url="@Model.PictureUri" />

    <ActionExecute Verb="OnCancel" Title="Go Back" />
</Card>

