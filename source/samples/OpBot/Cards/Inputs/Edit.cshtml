@using OpBot.Cards.Inputs
@inherits CardView<InputsApp,InputsModel>

<Card Version="1.5">
    <TextBlock Style="Heading">Edit Values!</TextBlock>

    <Input.Date Binding="Model.Birthday" Max="@DateTime.Now"/>
    <Input.Time Binding="Model.ArrivalTime" Min="@DateTime.Now"/>
    <Input.Number Binding="Model.Percent2"/>
    <Input.Number Binding="Model.Attendees"/>
    <Input.Text Binding="Model.PhoneNumber" />
    <Input.Text Binding="Model.Password" />
    <Input.Toggle Binding="Model.IsCool" />
    <Input.ChoiceSet Binding="Model.FavoritePet" />

    <Action.Cancel />
    <Action.OK />
</Card>

