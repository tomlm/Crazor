@using OpBot.Cards.ProductCatalog
@inherits CardView<ProductCatalogApp, EditOrAddProductCatalogItem>

<Card Version="1.5">
    

    @if (Model.IsEdit)
    {
        <TextBlock Size="ExtraLarge">Edit Catalog Item</TextBlock>
    }
    else
    {
        <TextBlock Size="ExtraLarge">Add Catalog Item</TextBlock>
    }
    <Input.Text Binding="Model.Item.Name" Label="Name" />
    <ValidationErrors Binding="Model.Item.Name" />
    
    <Input.Text Binding="Model.Item.Description" Label="Description" />
    <ValidationErrors Binding="Model.Item.Description" />
    
    <Input.Number Binding="Model.Item.Price" Label="Price" />
    <ValidationErrors Binding="Model.Item.Price" />

    <Input.Text Binding="Model.Item.PictureUri" Label="PictureUri" ErrorMessage="Picture Uri is required." />
    <ValidationErrors Binding="Model.Item.PictureUri" />

    <Action.Cancel />
    <Action.OK Title="Save"  />
</Card>

