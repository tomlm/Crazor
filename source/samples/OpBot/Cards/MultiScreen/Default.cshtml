@using OpBot.Cards.MultiScreen
@inherits CardView<MultiScreenApp>

<Card Version="1.5">
    <TextBlock Size="ExtraLarge" Weight="Bolder">Screen One</TextBlock>
    <Image Url="https://cdn2.iconfinder.com/data/icons/animal-vivid-volume-3/256/Tortoise-512.png" />

    <Action.Execute Title="explict Navigate(Card2)" Verb="OnCard2" />
    <Action.Execute Title="Implicit navigate to 'Card2'" Verb="Card2" />
</Card>

@functions {
    public void OnCard2()
    {
        ShowCard("Card2");
    }

    public void OnCard2Completed(object result)
    {
        AddBannerMessage("Card2 completed!", AdaptiveContainerStyle.Good);
    }
    
    public void OnCard2Canceled(string message)
    {
        AddBannerMessage("Card2 canceled!", AdaptiveContainerStyle.Warning);
    }
}