@using OpBot.Cards.MultiScreen
@inherits CardView<Card2Model>

<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Version Major="1" Minor="4" />
    <TextBlock Size="ExtraLarge" Weight="Bolder">Screen Two</TextBlock>
    <TextBlock Size="Large">Counter: @Model.Counter</TextBlock>

    <Action.Execute Title="Close" Verb="Close" />
    <Action.Execute Title="Increment" Verb="OnIncrementCounter" />
</Card>

@functions {
    public void OnIncrementCounter() => Model.Counter++;

}