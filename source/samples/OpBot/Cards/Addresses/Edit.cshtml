@using Newtonsoft.Json
@using OpBot.Cards.Address
@using System.ComponentModel
@inherits CardView<AddressApp, Address>

@functions {
    public override string GetRoute() => $"{base.GetRoute()}/{this.Model.Id}";
}

<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" Version="1.5">
    <TextBlock Size="ExtraLarge">Edit Address</TextBlock>

    <Input.Text Binding="Model.Street" />
    <ValidationErrors Binding="Model.Street" />

    <Input.Text Binding="Model.City" />
    <ValidationErrors Binding="Model.City" />

    <Input.ChoiceSet Binding="Model.State" />
    <ValidationErrors Binding="Model.State" />

    <Input.Text Binding="Model.PostalCode" />
    <ValidationErrors Binding="Model.PostalCode" />

    <Input.ChoiceSet Binding="Model.Country" />
    <ValidationErrors Binding="Model.Country" />

    <Action.Cancel />
    <Action.Close Title="Save" />
</Card>

@functions {

    public void OnLoadPage(string subPath)
    {
        this.Model = this.App.Addresses.Where(a => a.Id == subPath).SingleOrDefault();
        if (this.Model == null)
        {
            CancelView($"Address was not found.");
        }
    }
}