@using Crazor
@using OpBot.TagHelpers.FieldErrors
@model FieldErrorsTagHelper
@addTagHelper *, Crazor

@if (Model.Id != null && Model.View.ValidationErrors != null && Model.View.ValidationErrors.TryGetValue(Model.Id, out var errors))
{
    foreach (var error in errors)
    {
        <TextBlock Spacing="None" Color="Attention">@error</TextBlock>
    }
}
