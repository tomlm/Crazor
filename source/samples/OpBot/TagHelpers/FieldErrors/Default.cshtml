@using Crazor
@using OpBot.TagHelpers.FieldErrors
@model FieldErrorsTagHelper
@addTagHelper *, Crazor

@if (Model.ValidationErrors != null && Model.ValidationErrors.Any())
{
    foreach (var message in Model.ValidationErrors)
    {
        <TextBlock Spacing="None" Color="Attention">@message</TextBlock>
    }
}
