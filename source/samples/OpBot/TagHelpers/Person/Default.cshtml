@using OpBot.TagHelpers.Person
@model PersonTagHelper

<ColumnSet @Html.Raw(String.IsNullOrEmpty(Model.Id) ? String.Empty : $"Id=\"{Model.Id}\"")>
    <Column Width="auto" HorizontalAlignment="center">
        <Image Style="person" Url="@Model.Url" Size="@Model.Size.ToLower()" />
        <TextBlock Weight="bolder" Wrap="true">@Model.Name</TextBlock>
    </Column>
    <Column Width="stretch" VerticalContentAlignment="center" >
        <TextBlock Wrap="true" HorizontalAlignment="center">@Model.Text</TextBlock>
    </Column>
</ColumnSet>
