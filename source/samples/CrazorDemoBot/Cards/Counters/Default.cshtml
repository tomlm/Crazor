@using CrazorDemoBot.Cards.Counters
@inherits CardView<CountersApp>

<Card Version="1.5">
    <TextBlock Size="ExtraLarge" Weight="Bolder">Counters</TextBlock>
    <TextBlock Size="Large">App Counter:@App.AppCounter</TextBlock>

    <ActionSet>
        <Action.Execute Title="+ App" Verb="@nameof(OnIncrementApp)" />
        <Action.Execute Title="- App" Verb="@nameof(OnDecrementApp)" />
    </ActionSet>

    <TextBlock Size="Large">Session Counter:@Counter</TextBlock>
    <ActionSet>
        <Action.Execute Title="+ Session" Verb="@nameof(OnIncrement)" />
        <Action.Execute Title="- Session" Verb="@nameof(OnDecrement)" />
    </ActionSet>

</Card>

@functions {
    public int Counter { get; set; }

    public void OnIncrement()
        => this.Counter++;

    public void OnDecrement()
        => this.Counter--;

    public void OnIncrementApp()
        => App.AppCounter++;

    // verb handlers can be sync or async.
    public async Task OnDecrementApp()
    {
        await Task.CompletedTask;
        App.AppCounter--;
    }
}

