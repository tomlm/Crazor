@using CrazorDemoBot.Cards.Counters
@inherits CardView<CountersApp>

<Card Version="1.5">
    <TextBlock Size="ExtraLarge" Weight="Bolder">Counters</TextBlock>
    <TextBlock Size="Large">Shared Counter:@App.SharedCounter</TextBlock>

    <ActionSet>
        <Action.Execute Title="+ Shared" Verb="@nameof(OnIncrementShared)" />
        <Action.Execute Title="- Shared" Verb="@nameof(OnDecrementSharedAsync)" />
    </ActionSet>

    <TextBlock Size="Large">Session Counter:@SessionCounter</TextBlock>
    <ActionSet>
        <Action.Execute Title="+ Session" Verb="@nameof(OnIncrementSession)" />
        <Action.Execute Title="- Session" Verb="@nameof(OnDecrementSession)" />
    </ActionSet>

</Card>

@functions {
    [SessionMemory]
    public int SessionCounter { get; set; }

    public void OnIncrementSession()
        => this.SessionCounter++;

    public void OnDecrementSession()
        => this.SessionCounter--;

    public void OnIncrementShared()
        => App.SharedCounter++;

    public async Task OnDecrementSharedAsync()
    {
        await Task.Delay(0);
        App.SharedCounter--;
    }
}

