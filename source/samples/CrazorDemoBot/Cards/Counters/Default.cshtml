@inherits CardView

<Card Version="1.5">
    <TextBlock Size="Large">Session Counter:@Counter</TextBlock>

    <ActionSet>
        <ActionExecute Title="+ 1" Verb="@nameof(OnIncrement)" />
        <ActionExecute Title="- 1" Verb="@nameof(OnDecrement)" />
    </ActionSet>

</Card>

@functions {
    public int Counter { get; set; }

    public void OnIncrement()
        => this.Counter++;

    public void OnDecrement()
        => this.Counter--;
}

