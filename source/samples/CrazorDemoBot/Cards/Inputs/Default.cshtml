@using CrazorDemoBot.Cards.Inputs
@inherits CardView<InputsApp>

<Card Version="1.5">
    <TextBlock Style="Heading">Values!</TextBlock>

    <TextBlock>Birthday: @App.Data.Birthday?.ToShortDateString()</TextBlock>
    <TextBlock>Arrival: @App.Data.ArrivalTime?.ToString("HH:MM")</TextBlock>
    <TextBlock>Percentage: @App.Data.Percent</TextBlock>
    <TextBlock>Attendees: @App.Data.Attendees</TextBlock>
    <TextBlock>Phone: @App.Data.PhoneNumber</TextBlock>
    <TextBlock>Password: @App.Data.Password</TextBlock>
    <TextBlock>IsCool: @App.Data.IsCool</TextBlock>
    <TextBlock>Favorite Pet: @App.Data.FavoritePet</TextBlock>

    <Action.Execute Title="Edit" Verb="Edit"/>
</Card>

@functions {
    public void OnEdit()
    {
        ShowCard("Edit", App.Data);
    }

    public void OnEditCompleted(InputsModel model)
    {
        App.Data = model;
    }
}

