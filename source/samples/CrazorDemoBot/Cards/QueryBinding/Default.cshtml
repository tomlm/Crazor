@inherits CardView

<Card Version="1.5" Title="Query Binding">
    <TextBlock Style="Heading">Query Binding</TextBlock>
    <TextBlock>This card shows how you can initialize parameters in your view from query parameters</TextBlock>
    <TextBlock Wrap="true">Name and Zip have [FromQuery] attribute which allows it to be initialized from query paraemter ?name=&amp;zip=</TextBlock>

    <Input.Text Binding="Name" />
    <Input.Text Binding="Zip" />
    <Input.Text Binding="City" />

    <Action.Cancel />
    <Action.OK />
</Card>

@functions {
    [FromQuery]
    [BindProperty]
    public string Name { get; set; }

    [FromQuery]
    [BindProperty]
    public string Zip { get; set; }

    [BindProperty]
    public string City { get; set; }

