@using Crazor
@using CrazorDemoBot.Cards.Dice
@inherits CardView<DiceApp>
@attribute [TaskInfo(Title="Change Dice Settings", Width = "small", Height = "medium")]

<Card Version="1.5">
    <Input.Text Binding="App.DiceName" />
    <Input.Number Binding="App.NumberDice" />

    @if (IsModelValid)
    {
        <Action.Cancel />
    }
    <Action.OK />
</Card>

@functions {
    public void OnOK()
    {
        if (this.IsModelValid)
        {
            this.App.RollDice();
            this.CloseTaskModule(TaskModuleAction.Auto);
            CloseView();
        }
    }
}