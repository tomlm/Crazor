@using Crazor
@using CrazorDemoBot.Cards.Dice
@inherits CardView<DiceApp>

<Card Version="1.6">
    <Input.Text Binding="App.DiceName" />
    <Input.Number Binding="App.NumberDice" />

    @if (IsModelValid)
    {
        <Action.Cancel />
    }
    <Action.OK />
</Card>

@functions {


    public void OnOK()
    {
        if (IsModelValid && this.App.NumberDice.HasValue)
        {
            this.App.SharedId = App.DiceName.Replace(" ", String.Empty);
            this.App.RollDice();
            CloseCard();
        }
    }
}