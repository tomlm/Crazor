@using CrazorDemoBot.Cards.Dice
@inherits CardView<DiceApp>
@attribute [TaskInfo(Width = "small", Height = "medium")]

<Card Version="1.5">
</Card>


@functions {
    public void OnShowView()
    {
        if (App.DiceName == null)
            ShowView("Settings");
        else
            ShowView("Dice");
    }

    public override Task OnResumeView(CardResult cardResult, CancellationToken cancellationToken)
    {
        if (App.DiceName == null)
            ShowView("Settings");
        else
            ShowView("Dice");
        return Task.CompletedTask;
    }
}
