@using Crazor
@using CrazorDemoBot.Cards.Dice
@inherits CardView<DiceApp>

<Card Version="1.5">
    <TextBlock Size="Large" Weight="Bolder" Style="Heading">@App.DiceName</TextBlock>
    @if (App.Dice != null)
    {
        <ImageSet>
            @foreach (var die in App.Dice)
            {
                <Image Url="@UrlHelper.Content($"~/images/dice{die}.png")" Size="Medium" />
            }
        </ImageSet>
    }
    <Action.Execute Verb="RollDice" Title="Roll Dice" />
    <Action.Execute Verb="Refresh2" Title="Refresh" />
</Card>


@functions {

    public void OnInitialize()
    {
        if (App.Dice == null)
            ShowCard("Settings");
    }

    public void RollDice() => App.RollDice();
}