@using CrazorDemoBot.Cards.MultiScreen
@inherits CardView<MultiScreenApp>

<Card Version="1.5">
    <TextBlock Size="ExtraLarge" Weight="Bolder">Screen One</TextBlock>
    <Image Url="https://cdn2.iconfinder.com/data/icons/animal-vivid-volume-3/256/Tortoise-512.png" />

    <Action.Execute Title="explict Navigate(Card2)" Verb="@nameof(OnCard2)" />
    <Action.Execute Title="Implicit navigate to 'Card2'" Verb="Card2" />
</Card>

@functions {
    public void OnCard2()
    {
        ShowView("Card2");
    }

    public void OnResume(CardResult cardResult)
    {
        if (cardResult.Success == true)
            AddBannerMessage($"{cardResult.Name} completed!", AdaptiveContainerStyle.Good);
        else 
        {
            AddBannerMessage($"{cardResult.Name} Canceled!", AdaptiveContainerStyle.Warning);
        }
    }
}