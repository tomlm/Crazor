@using CrazorDemoBot.Cards.Inputs
@inherits CardView<CardApp,InputsModel>

<Card Version="1.5" Title="People Picker Card">
    <TextBlock Style="Heading">Pick a person!</TextBlock>

    <Input.ChoiceSet Label="Person" Binding="Choice" Style="Filtered">
        <Data.Query Dataset="graph.microsoft.com/users" />
    </Input.ChoiceSet>

    <TextBlock>Person: @Choice</TextBlock>
    
    <Action.Execute Verb="Refresh" />
</Card>

@functions
{
    [BindProperty]
    public string Choice{get;set;}
}

