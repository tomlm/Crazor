@using Crazor.AdaptiveCards
@using CrazorDemoBot.TagHelpers.ThumbnailCard
@model ThumbnailCardTagHelper

<ColumnSet>
    <Column Width="Auto" HorizontalAlignment="Center">
        <Image Url="@Model.ImageUrl" Size="@(Model?.Size ?? AdaptiveImageSize.Medium)" />
    </Column>
    <Column Width="stretch">
        @if (!String.IsNullOrEmpty(Model?.Title))
        {
            <TextBlock Size="Large" Weight="Bolder">@Model!.Title</TextBlock>
        }
        @if (!String.IsNullOrEmpty(Model?.Subtitle))
        {
            <TextBlock Size="Medium" IsSubtle="true" >@Model!.Subtitle</TextBlock>
        }
        <TextBlock Wrap="true" MaxLines="3">@Model!.ChildContent</TextBlock>
    </Column>
</ColumnSet>
