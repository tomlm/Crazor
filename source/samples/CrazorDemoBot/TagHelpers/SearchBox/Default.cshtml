@using AdaptiveCards
@using CrazorDemoBot.TagHelpers.SearchBox
@model SearchBoxTagHelper
@addTagHelper *, Crazor

<ColumnSet>
    <Column Width="stretch">
        <Input.Text Id="@Model.Id" Value="@Model.Value" Placeholder="@Model.Placeholder"/>
    </Column>
    <Column Width="auto">
        <ActionSet>
            <Action.Execute Verb="@Model.Verb" Title="@Model.Title" />
        </ActionSet>
    </Column>
</ColumnSet>
