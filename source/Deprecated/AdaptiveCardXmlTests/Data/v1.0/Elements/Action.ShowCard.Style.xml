<?xml version="1.0" encoding="utf-16"?>
<Card xmlns="application/vnd.microsoft.card.adaptive">
  <Version Major="1" Minor="0" />
  <TextBlock>This card's action will show another card</TextBlock>
  <Action.ShowCard Title="No Style">
    <AdaptiveCard>
      <Version Major="1" Minor="0" />
      <TextBlock>This card has no style</TextBlock>
    </AdaptiveCard>
  </Action.ShowCard>
  <Action.ShowCard Title="Default Style">
    <AdaptiveCard>
      <Version Major="1" Minor="0" />
      <TextBlock>This card has default style</TextBlock>
    </AdaptiveCard>
  </Action.ShowCard>
  <Action.ShowCard Title="Emphasis Style">
    <AdaptiveCard>
      <AdditionalProperties>
        <item>
          <key>
            <string xmlns="">style</string>
          </key>
          <value>
            <anyType xmlns:q1="http://www.w3.org/2001/XMLSchema" p8:type="q1:string" xmlns:p8="http://www.w3.org/2001/XMLSchema-instance" xmlns="">emphasis</anyType>
          </value>
        </item>
      </AdditionalProperties>
      <Version Major="1" Minor="0" />
      <TextBlock>This card has emphasis style</TextBlock>
    </AdaptiveCard>
  </Action.ShowCard>
</Card>