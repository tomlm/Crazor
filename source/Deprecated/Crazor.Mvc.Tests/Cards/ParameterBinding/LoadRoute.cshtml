@inherits CardView
@attribute [CardRoute("LoadRoute/{resource}")]
<Card Version="1.5">
    <TextBlock Id="@nameof(Title)">@Title</TextBlock>
</Card>

@functions 
{
    public string Title { get; set; }

    public void OnLoad(string resource, string name)
    {
        Title = $"{resource}-{name}";
    }
}