@using Crazor
@using Crazor.Blazor.Tests.Cards.RouteBinding;
@using Microsoft.AspNetCore.Mvc;
@inherits CardView<RouteBindingApp>

<Card Version="1.4">
    <TextBlock Id="@nameof(ResourceId)">@ResourceId</TextBlock>
    <TextBlock Id="@nameof(ResourceId2)">@ResourceId2</TextBlock>
    <TextBlock Id="@nameof(Value)">@Value</TextBlock>
    <TextBlock Id="AppId">@App.Id</TextBlock>
</Card>

@code 
{
    public string ResourceId { get; set; }

    [FromCardRoute(Name="ResourceId")]
    public string ResourceId2 { get; set; }

    [FromCardQuery]
    public string Value { get; set; }
}