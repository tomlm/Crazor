@inherits CardView

<Card Version="1.4">
    <TextBlock Size="AdaptiveTextSize.Large">Counter: @Counter</TextBlock>

    <ActionExecute Title="+ Session" Verb="@nameof(OnIncrement)" Id="@nameof(OnIncrement)" />
</Card>

@code {
    public int Counter { get; set; }

    public void OnIncrement()
        => this.Counter++;
}

