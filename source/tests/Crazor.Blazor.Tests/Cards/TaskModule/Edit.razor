@using Crazor.Blazor.Tests.Cards.TaskModule
@inherits CardView<TaskModuleApp>
<Card Version="1.5" Title="Test Task Module Functionality">
    <TextBlock>Counter: @App.Counter</TextBlock>

    <ActionExecute Id="@nameof(OnIncrement)" Verb="@nameof(OnIncrement)" Title="Increment" />

    <ActionCancel Id="@nameof(OnCancel)" />
    <ActionOK Id="@nameof(OnOK)" />
    <ActionExecute Id="@nameof(OnPost)" Verb="@nameof(OnPost)" />
</Card>

@code {

    public void OnIncrement() => App.Counter++;

    public void OnOK()
    {
        CloseTaskModule(TaskModuleAction.Auto);
        CloseView();
    }

    public void OnPost()
    {
        CloseTaskModule(TaskModuleAction.PostCard);
        CloseView();
    }

    public void OnCancel()
    {
        CloseTaskModule(TaskModuleAction.None);
    }
}
