@using Crazor.Blazor.Tests.Cards.CodeOnlyView
@inherits CardView
<Card Version="1.4">

    <TextBlock>This card demonstrates defining a view which is only code (no razor)</TextBlock>
    <ActionExecute Verb="@nameof(OnShowMyCode)" Title="Show Code Only View" />
    <ActionExecute Verb="@nameof(OnShowMyCodeT)" Title="Show Code Only View" />
</Card>
@code {
    public void OnShowMyCode() => ShowView("MyCode");
    public void OnShowMyCodeT() => ShowView<MyCodeView>();

}