<?xml version="1.0" encoding="utf-16"?>
<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" Version="1.3">
  <TextBlock Size="Medium" Text="Please fill out the following form:" Wrap="true" />
  <Input.Text Id="fullName" IsRequired="true" Label="Full Name:" ErrorMessage="Name is required" Placeholder="First Last" />
  <Input.Text Id="nickName" Label="Nickname:" />
  <Input.Number Id="number" IsRequired="true" Label="What's your favorite number?" ErrorMessage="Favorite number is required" Value="NaN" Min="NaN" Max="NaN" />
  <Input.Date Id="dob" IsRequired="true" Label="Date of Birth" ErrorMessage="Date of birth is required" />
  <Input.Date Id="start" Label="Start date if known:" />
  <Input.Toggle Id="mailingList" Label="Would you like to join our mailing list?" Title="Sign me up!" ValueOn="True" ValueOff="False" />
  <Input.Toggle Id="termsOfService" IsRequired="true" Label="Please agree to the terms of service:" ErrorMessage="You must agree to the terms of service" Title="I agree" ValueOn="True" ValueOff="False" />
  <Input.ChoiceSet Id="choiceSet1" IsRequired="true" Label="Please select from the following choices:" ErrorMessage="You must select a choice" Placeholder="Select a Choice">
    <Choices>
      <Choice Title="Choice 1" Value="Choice 1" />
      <Choice Title="Choice 2" Value="Choice 2" />
    </Choices>
  </Input.ChoiceSet>
  <Input.ChoiceSet Id="choiceSet2" IsRequired="true" Label="Please select from the following choices:" ErrorMessage="You must select a choice" Style="Expanded">
    <Choices>
      <Choice Title="Choice 1" Value="Choice 1" />
      <Choice Title="Choice 2" Value="Choice 2" />
    </Choices>
  </Input.ChoiceSet>
  <Input.ChoiceSet Id="choiceSet3" IsRequired="true" Label="Please select from the following choices:" ErrorMessage="You must select a choice" Style="Expanded" IsMultiSelect="true">
    <Choices>
      <Choice Title="Choice 1" Value="Choice 1" />
      <Choice Title="Choice 2" Value="Choice 2" />
    </Choices>
  </Input.ChoiceSet>
  <Action.Submit Title="Send!" />
</Card>