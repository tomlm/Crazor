    },
    {
      "type": "Input.Text",
      "id": "input3",
      "maxLength": 6,
      "inlineAction": {
        "type": "Action.Submit",
        "title": "Inline Action",
        "iconUrl": "http://adaptivecards.io/content/cats/1.png"
      },
      "label": "Input.Text with maxLength of 6 and inline action",
      "errorMessage": "Input must contain 6 characters or less."
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
