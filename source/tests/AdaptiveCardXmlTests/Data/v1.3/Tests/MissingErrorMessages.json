{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "This card contains 16 inputs that use input validation properties, but do not contain error messages. The renderer should return a warning for each input whose validation is enforced by input validation.",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "requiredText",
      "isRequired": true,
      "label": "Required Input.Text"
    },
    {
      "type": "Input.Text",
      "id": "maxLength",
      "maxLength": 5,
      "label": "MaxLength Input.Text"
    },
    {
      "type": "Input.Text",
      "id": "regExText",
      "regex": "([A-Z])\\w+",
      "label": "RegEx Input.Text"
    },
    {
      "type": "Input.Date",
      "id": "requiredDate",
      "isRequired": true,
      "label": "Required Input.Date"
    },
    {
      "type": "Input.Date",
      "id": "minDate",
      "min": "2012-07-04",
      "label": "Min Input.Date"
    },
    {
      "type": "Input.Date",
      "id": "maxDate",
      "max": "2015-09-16",
      "label": "Max Input.Date"
    },
    {
      "type": "Input.Time",
      "id": "requiredTime",
      "isRequired": true,
      "label": "Required Input.Time"
    },
    {
      "type": "Input.Time",
      "id": "minTime",
