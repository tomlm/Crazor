      "label": "Min Input.Time"
    },
    {
      "type": "Input.Time",
      "id": "maxTime",
      "max": "20:00",
      "label": "Max Input.Time"
    },
    {
      "type": "Input.Number",
      "id": "requiredNumber",
      "isRequired": true,
      "label": "Required Input.Number"
    },
    {
      "type": "Input.Number",
      "id": "minNumber",
      "min": 4.0,
      "label": "Min Input.Number"
    },
    {
      "type": "Input.Number",
      "id": "maxNumber",
      "max": 8.0,
      "label": "Max Input.Number"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "compact",
      "choices": [
        {
          "title": "Thing 1",
          "value": "Thing 1"
        },
        {
          "title": "Thing 2",
          "value": "Thing 2"
        }
      ],
      "isRequired": true,
      "label": "Required Compact Input.ChoiceSet",
      "style": "compact"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "expanded",
      "style": "expanded",
      "choices": [
        {
          "title": "Thing 1",
          "value": "Thing 1"
        },
        {
          "title": "Thing 2",
          "value": "Thing 2"
        }
      ],
      "isRequired": true,
      "label": "Required Expanded Input.ChoiceSet"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "multiselect",
      "style": "expanded",
      "isMultiSelect": true,
      "choices": [
        {
          "title": "Thing 1",
          "value": "Thing 1"
        },
        {
          "title": "Thing 2",
          "value": "Thing 2"
        }
      ],
      "isRequired": true,
      "label": "Required Multiselect Input.ChoiceSet"
    },
    {
      "type": "Input.Toggle",
      "id": "toggle",
      "title": "Required Input.Toggle",
      "valueOn": "True",
      "valueOff": "False",
      "isRequired": true,
      "label": "Required Input.Toggle"
