{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "text": "Please fill out the following form:",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "fullName",
      "placeholder": "First Last",
      "isRequired": true,
      "label": "Full Name:",
      "errorMessage": "Name is required"
    },
    {
      "type": "Input.Text",
      "id": "nickName",
      "label": "Nickname:"
    },
    {
      "type": "Input.Number",
      "id": "number",
      "isRequired": true,
      "label": "What's your favorite number?",
      "errorMessage": "Favorite number is required"
    },
    {
      "type": "Input.Date",
      "id": "dob",
      "isRequired": true,
      "label": "Date of Birth",
      "errorMessage": "Date of birth is required"
    },
    {
      "type": "Input.Date",
      "id": "start",
      "label": "Start date if known:"
    },
    {
      "type": "Input.Toggle",
      "id": "mailingList",
      "title": "Sign me up!",
      "valueOn": "True",
      "valueOff": "False",
      "label": "Would you like to join our mailing list?"
    },
    {
      "type": "Input.Toggle",
      "id": "termsOfService",
      "title": "I agree",
      "valueOn": "True",
      "valueOff": "False",
      "isRequired": true,
      "label": "Please agree to the terms of service:",
      "errorMessage": "You must agree to the terms of service"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "choiceSet1",
      "choices": [
        {
          "title": "Choice 1",
          "value": "Choice 1"
        },
        {
          "title": "Choice 2",
          "value": "Choice 2"
        }
      ],
      "placeholder": "Select a Choice",
      "isRequired": true,
      "label": "Please select from the following choices:",
      "errorMessage": "You must select a choice",
      "style": "compact"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "choiceSet2",
      "style": "expanded",
      "choices": [
        {
          "title": "Choice 1",
          "value": "Choice 1"
        },
        {
          "title": "Choice 2",
          "value": "Choice 2"
        }
      ],
      "isRequired": true,
      "label": "Please select from the following choices:",
      "errorMessage": "You must select a choice"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "choiceSet3",
      "style": "expanded",
      "isMultiSelect": true,
      "choices": [
        {
          "title": "Choice 1",
          "value": "Choice 1"
        },
        {
          "title": "Choice 2",
          "value": "Choice 2"
        }
      ],
      "isRequired": true,
      "label": "Please select from the following choices:",
      "errorMessage": "You must select a choice"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Send!"
    }
  ]
}