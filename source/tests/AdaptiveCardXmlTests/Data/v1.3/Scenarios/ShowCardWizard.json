{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Please provide the following information:",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.ShowCard",
      "card": {
        "type": "AdaptiveCard",
        "version": "1.3",
        "body": [
          {
            "type": "Container",
            "id": "nameProperties",
            "items": [
              {
                "type": "Input.Text",
                "id": "FirstName",
                "isRequired": true,
                "label": "First Name",
                "errorMessage": "First Name is required"
              },
              {
                "type": "Input.Text",
                "id": "MiddleName",
                "label": "Middle Name"
              },
              {
                "type": "Input.Text",
                "id": "LastName",
                "isRequired": true,
                "label": "Last Name",
                "errorMessage": "Last Name is required"
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "Action.ShowCard",
            "card": {
              "type": "AdaptiveCard",
              "version": "1.3",
              "body": [
                {
                  "type": "Container",
                  "id": "addressProperties",
                  "items": [
                    {
                      "type": "Input.Text",
                      "id": "AddressLine1",
                      "label": "Address line 1"
                    },
                    {
                      "type": "Input.Text",
                      "id": "AddressLine2",
                      "label": "Address line 2"
                    },
                    {
                      "type": "ColumnSet",
                      "columns": [
                        {
                          "type": "Column",
                          "width": "stretch",
                          "items": [
                            {
                              "type": "Input.Text",
                              "id": "City",
                              "label": "City"
                            }
                          ]
                        },
                        {
                          "type": "Column",
                          "width": "stretch",
                          "items": [
                            {
                              "type": "Input.Text",
                              "id": "State",
                              "label": "State"
                            }
                          ]
                        },
                        {
                          "type": "Column",
                          "width": "stretch",
                          "items": [
                            {
                              "type": "Input.Text",
                              "id": "Zip",
                              "label": "Zip Code"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ],
              "actions": [
                {
                  "type": "Action.ShowCard",
                  "card": {
                    "type": "AdaptiveCard",
                    "version": "1.3",
                    "body": [
                      {
                        "type": "Input.Text",
                        "id": "CellPhone",
                        "label": "Cell Number"
                      },
                      {
                        "type": "Input.Text",
                        "id": "HomePhone",
                        "label": "Home Number"
                      },
                      {
                        "type": "Input.Text",
                        "id": "Email",
                        "label": "Email Address"
                      }
                    ],
                    "actions": [
                      {
                        "type": "Action.Submit",
                        "title": "Submit"
                      }
                    ]
                  },
                  "title": "3. Phone/Email"
                }
              ]
            },
            "title": "2. Address"
          }
        ]
      },
      "title": "1. Name"
    }
  ]
}