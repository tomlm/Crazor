<?xml version="1.0" encoding="utf-16"?>
<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" Version="1.2">
  <TextBlock Size="large" Weight="bolder" Text="Requires Test" />
  <ColumnSet>
    <Column>
      <TextBlock Color="good" Text="✓: This textblock requires adaptiveCards 1.2" Wrap="true">
        <Requires>
          <Property Name="adaptiveCards">1.2</Property>
        </Requires>
      </TextBlock>
    </Column>
    <Column>
      <TextBlock Color="good" Text="✓: This textblock requires adaptiveCards 1.2 and acTest 1.0" Wrap="true">
        <Requires>
          <Property Name="adaptiveCards">1.2</Property>
          <Property Name="acTest">1.0</Property>
        </Requires>
      </TextBlock>
    </Column>
    <Column>
      <TextBlock Color="attention" Text="✗: This textblock requires acTest 2.0" Wrap="true">
        <Fallback>
          <TextBlock Color="good" Text="✓:We don't support acTest 2.0" Wrap="true" />
        </Fallback>
        <Requires>
          <Property Name="acTest">2.0</Property>
        </Requires>
      </TextBlock>
    </Column>
    <Column>
      <TextBlock Color="good" Text="✓: This textblock requires any version of acTest" Wrap="true">
        <Requires>
          <Property Name="acTest">*</Property>
        </Requires>
      </TextBlock>
    </Column>
    <Column>
      <TextBlock Color="attention" Text="✗: This textblock requires adaptiveCards 5.0" Wrap="true">
        <Fallback>
          <TextBlock Color="good" Text="✓:We don't support adaptiveCards 5.0" Wrap="true" />
        </Fallback>
        <Requires>
          <Property Name="adaptiveCards">5</Property>
        </Requires>
      </TextBlock>
    </Column>
  </ColumnSet>
</Card>