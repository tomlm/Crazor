{
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Input.Text elements",
      "horizontalAlignment": "center"
    },
    {
      "type": "Input.Text",
      "id": "SimpleVal",
      "placeholder": "Name"
    },
    {
      "type": "Input.Text",
      "id": "UrlVal",
      "placeholder": "Homepage",
      "style": "url"
    },
    {
      "type": "Input.Text",
      "id": "EmailVal",
      "placeholder": "Email",
      "style": "email"
    },
    {
      "type": "Input.Text",
      "id": "TelVal",
      "placeholder": "Phone",
      "style": "tel"
    },
    {
      "type": "Input.Text",
      "id": "MultiLineVal",
      "placeholder": "Comments",
      "isMultiline": true
    },
    {
      "type": "Input.Number",
      "id": "NumVal",
      "placeholder": "Quantity",
      "value": 1.0,
      "min": -5.0,
      "max": 5.0
    },
    {
      "type": "Input.Date",
      "id": "DateVal",
      "placeholder": "Due Date",
      "value": "2017-09-20"
    },
    {
      "type": "Input.Time",
      "id": "TimeVal",
      "placeholder": "Start time",
      "value": "16:59"
    },
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Input.ChoiceSet",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "What color do you want? (compact)"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "CompactSelectVal",
      "value": "1",
      "style": "compact",
      "isMultiSelect": false,
      "choices": [
        {
          "title": "Red",
          "value": "1"
        },
        {
          "title": "Green",
          "value": "2"
        },
        {
          "title": "Blue",
          "value": "3"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "What color do you want? (expanded)"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "SingleSelectVal",
      "value": "1",
      "style": "expanded",
      "isMultiSelect": false,
      "choices": [
        {
          "title": "Red",
          "value": "1"
        },
        {
          "title": "Green",
          "value": "2"
        },
        {
          "title": "Blue",
          "value": "3"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "What colors do you want? (multiselect)"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "MultiSelectVal",
      "value": "1,3",
      "style": "compact",
      "isMultiSelect": true,
      "choices": [
        {
          "title": "Red",
          "value": "1"
        },
        {
          "title": "Green",
          "value": "2"
        },
        {
          "title": "Blue",
          "value": "3"
        }
      ]
    },
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Input.Toggle",
      "horizontalAlignment": "center"
    },
    {
      "type": "Input.Toggle",
      "id": "AcceptsTerms",
      "title": "I accept the terms and conditions (True/False)",
      "valueOn": "true",
      "valueOff": "false"
    },
    {
      "type": "Input.Toggle",
      "id": "ColorPreference",
      "title": "Red cars are better than other cars",
      "valueOn": "RedCars",
      "valueOff": "NotRedCars"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "data": {
        "id": "1234567890"
      },
      "title": "Submit"
    },
    {
      "type": "Action.ShowCard",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Input.Text",
            "id": "CommentVal",
            "placeholder": "enter comment"
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "OK"
          }
        ]
      },
      "title": "Show Card"
    }
  ]
}