<?xml version="1.0" encoding="utf-16"?>
<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" Version="1.0">
  <ColumnSet Height="stretch">
    <Column Width="45">
      <Container Style="emphasis" Bleed="true">
        <BackgroundImage Url="https://messagecardplayground.azurewebsites.net/assets/TxP_Background.png" />
        <Image Url="https://messagecardplayground.azurewebsites.net/assets/TxP_Flight.png" HorizontalAlignment="center" AltText="Departing airplane" />
      </Container>
      <Container Spacing="none" Height="stretch" Style="emphasis" Bleed="true">
        <TextBlock Size="extraLarge" Weight="lighter" Color="accent" Wrap="true">Flight to JFK</TextBlock>
        <TextBlock Spacing="small" Wrap="true">Continental Air Lines flight UA110</TextBlock>
        <TextBlock Spacing="none" Wrap="true">Confirmation code: RXJ34P</TextBlock>
        <TextBlock Spacing="none" Wrap="true">4 hours 15 minutes</TextBlock>
      </Container>
    </Column>
    <Column Width="55">
      <Container Height="stretch">
        <ColumnSet>
          <Column Width="auto">
            <TextBlock Size="extraLarge" Weight="lighter" Wrap="true">SFO</TextBlock>
          </Column>
          <Column VerticalContentAlignment="center" Width="stretch">
            <Image Height="2px" Url="https://messagecardplayground.azurewebsites.net/assets/graydot2x2.png" Width="10000px" />
          </Column>
          <Column Spacing="small" VerticalContentAlignment="center" Width="auto">
            <Image Height="16px" Url="https://messagecardplayground.azurewebsites.net/assets/smallairplane.png" AltText="Flight to" />
          </Column>
          <Column Width="auto">
            <TextBlock Size="extraLarge" Weight="lighter" HorizontalAlignment="right" Wrap="true">JFK</TextBlock>
          </Column>
        </ColumnSet>
        <ColumnSet>
          <Column Width="1">
            <RichTextBlock>
              <Inlines Size="medium">8:15 PM
</Inlines>
              <Inlines IsSubtle="true">Sat, Mar 4, 2017
</Inlines>
              <Inlines IsSubtle="true">San Francisco</Inlines>
            </RichTextBlock>
          </Column>
          <Column Width="1">
            <RichTextBlock HorizontalAlignment="right">
              <Inlines Size="medium">3:30 AM
</Inlines>
              <Inlines IsSubtle="true">Sat, Mar 4, 2017
</Inlines>
              <Inlines IsSubtle="true">New York</Inlines>
            </RichTextBlock>
          </Column>
        </ColumnSet>
        <ActionSet Spacing="medium" Separator="true">
          <Action.Submit Title="Check in" Style="positive" />
          <Action.Submit Title="View" />
        </ActionSet>
      </Container>
    </Column>
  </ColumnSet>
</Card>