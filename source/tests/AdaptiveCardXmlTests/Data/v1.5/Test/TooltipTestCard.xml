<?xml version="1.0" encoding="utf-16"?>
<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" Version="1.5">
  <TextBlock Weight="bolder" Text="Button with no title or tooltip" Wrap="true" />
  <ActionSet>
    <Action.Submit IconUrl="https://adaptivecards.io/content/cats/1.png" />
  </ActionSet>
  <TextBlock Weight="bolder" Text="Button with a title" Wrap="true" />
  <ActionSet>
    <Action.Submit Title="Title" IconUrl="https://adaptivecards.io/content/cats/1.png" />
  </ActionSet>
  <TextBlock Weight="bolder" Text="Button with a tooltip" Wrap="true" />
  <ActionSet>
    <Action.Submit IconUrl="https://adaptivecards.io/content/cats/1.png" Tooltip="Tooltip" />
  </ActionSet>
  <TextBlock Weight="bolder" Text="Button with a title and a tooltip" Wrap="true" />
  <ActionSet>
    <Action.Submit Title="Title" IconUrl="https://adaptivecards.io/content/cats/1.png" Tooltip="Tooltip" />
  </ActionSet>
  <Input.Text Id="tooltiptest1" Label="Inline Action with a title (title should show on button, no tooltip)">
    <Action.Submit Title="Title" />
  </Input.Text>
  <Input.Text Id="tooltiptest2" Label="Inline Action with a title and a tooltip (title should show on button, tooltip in tooltip)">
    <Action.Submit Title="Title" Tooltip="Tooltip" />
  </Input.Text>
  <Input.Text Id="tooltiptest3" Label="Inline Action with an icon and a tooltip (icon should show on button, tooltip in tooltip)">
    <Action.Submit IconUrl="https://adaptivecards.io/content/cats/1.png" Tooltip="Tooltip" />
  </Input.Text>
  <Input.Text Id="tooltiptest4" Label="Inline Action with an icon and a title (icon should show on button, title in tooltip)">
    <Action.Submit Title="Title" IconUrl="https://adaptivecards.io/content/cats/1.png" />
  </Input.Text>
  <Input.Text Id="tooltiptest5" Label="Inline Action with an icon and a title and a tooltip (icon should show on button, tooltip in tooltip)">
    <Action.Submit Title="Title" IconUrl="https://adaptivecards.io/content/cats/1.png" Tooltip="Tooltip" />
  </Input.Text>
  <TextBlock Weight="bolder" Text="A container with a text block and an image. No title or tooltip. (no tooltip)" Wrap="true" />
  <Container>
    <SelectAction xsi:type="Action.Submit" />
    <TextBlock Text="Text block content." Wrap="true" />
    <Image Size="medium" Url="https://adaptivecards.io/content/cats/1.png" AltText="Image Alt Text." />
  </Container>
  <TextBlock Weight="bolder" Text="A container with a text block and an image. Action has title. (title should be used as tooltip)" Wrap="true" />
  <Container>
    <SelectAction xsi:type="Action.Submit" Title="Title" />
    <TextBlock Text="Text block content." Wrap="true" />
    <Image Size="medium" Url="https://adaptivecards.io/content/cats/1.png" AltText="Image Alt Text." />
  </Container>
  <TextBlock Weight="bolder" Text="A container with a text block and an image. Action has tooltip. (tooltip should be used as tooltip)" Wrap="true" />
  <Container>
    <SelectAction xsi:type="Action.Submit" Tooltip="Tooltip" />
    <TextBlock Text="Text block content." Wrap="true" />
    <Image Size="medium" Url="https://adaptivecards.io/content/cats/1.png" AltText="Image Alt Text." />
  </Container>
  <TextBlock Weight="bolder" Text="A container with a text block and an image. Action has title and tooltip. (tooltip should be used as tooltip)" Wrap="true" />
  <Container>
    <SelectAction xsi:type="Action.Submit" Title="Title" Tooltip="Tooltip" />
    <TextBlock Text="Text block content." Wrap="true" />
    <Image Size="medium" Url="https://adaptivecards.io/content/cats/1.png" AltText="Image Alt Text." />
  </Container>
  <RichTextBlock>
    <Inlines Color="good">
      <Type>TextRun</Type>RichTextBlock with SelectAction, Action has title and tooltip (tooltip should be used as tooltip).<SelectAction xsi:type="Action.Submit" Title="Title" Tooltip="Tooltip" /></Inlines>
    <Inlines Weight="bolder">
      <Type>TextRun</Type> -Should not trigger any actions- </Inlines>
    <Inlines Color="warning">
      <Type>TextRun</Type>RichTextBlock with SelectAction, Action has title and no tooltip (title should be used as tooltip).<SelectAction xsi:type="Action.Submit" Title="title">{
  "x": "hello world!"
}</SelectAction></Inlines>
    <Inlines Weight="bolder">
      <Type>TextRun</Type> -Should not trigger any actions- </Inlines>
  </RichTextBlock>
  <TextBlock Weight="bolder" Text="Image has SelectAction. No title or tooltip (no tooltip)" Wrap="true" />
  <Image Size="large" Url="https://adaptivecards.io/content/cats/1.png" AltText="Image Alt Text.">
    <AdditionalProperties>
      <item>
        <key>
          <string>tooltip</string>
        </key>
        <value>
          <anyType xsi:type="xsd:string">tooltip</anyType>
        </value>
      </item>
    </AdditionalProperties>
    <SelectAction xsi:type="Action.Submit" />
  </Image>
  <TextBlock Weight="bolder" Text="Image has SelectAction. Action has title and tooltip. (tooltip should be used as tooltip)" Wrap="true" />
  <Image Size="large" Url="https://adaptivecards.io/content/cats/1.png" AltText="Image Alt Text.">
    <AdditionalProperties>
      <item>
        <key>
          <string>tooltip</string>
        </key>
        <value>
          <anyType xsi:type="xsd:string">tooltip</anyType>
        </value>
      </item>
    </AdditionalProperties>
    <SelectAction xsi:type="Action.Submit" Title="title" Tooltip="tooltip" />
  </Image>
  <TextBlock Weight="bolder" Text="Image has SelectAction. Action has title. (title should be used as tooltip)" Wrap="true" />
  <Image Size="large" Url="https://adaptivecards.io/content/cats/1.png" AltText="Image Alt Text.">
    <SelectAction xsi:type="Action.Submit" Title="title" />
  </Image>
  <TextBlock Weight="bolder" Text="Adaptive Card has SelectAction Action has tooltip. (tooltip should appear)" Wrap="true" />
  <SelectAction xsi:type="Action.Submit" Title="title" Tooltip="Card Level Tooltip">{
  "Card Level Action?": "Yes"
}</SelectAction>
</Card>