<?xml version="1.0" encoding="utf-16"?>
<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" Version="1.4">
  <TextBlock Text="Please select your language:" />
  <Action.ShowCard Title="English">
    <AdaptiveCard Version="1.4">
      <TextBlock Size="Medium" Weight="Bolder" Text="Registration Form" HorizontalAlignment="Center" Wrap="true" Style="Heading" />
      <Input.Text Id="SimpleValENG" IsRequired="true" Label="Name" ErrorMessage="Name is required" />
      <Input.Text Id="EmailValENG" Label="Email" Style="Email" />
      <Input.Text Id="TelValENG" Label="Phone" Style="Tel" />
      <Input.Text Id="MultiLineValENG" Label="Comments" IsMultiline="true" />
      <Action.Submit Title="Submit" />
    </AdaptiveCard>
  </Action.ShowCard>
  <Action.ShowCard Title="عربي">
    <AdaptiveCard Version="1.4">
      <AdditionalProperties>
        <item>
          <key>
            <string>rtl</string>
          </key>
          <value>
            <anyType xsi:type="xsd:boolean">true</anyType>
          </value>
        </item>
      </AdditionalProperties>
      <TextBlock Size="Medium" Weight="Bolder" Text="إستمارة تسجيل" HorizontalAlignment="Center" Wrap="true" Style="Heading" />
      <Input.Text Id="SimpleValARA" IsRequired="true" Label="اسم" ErrorMessage="مطلوب اسم" />
      <Input.Text Id="EmailValARA" Label="بريد الالكتروني" Style="Email" />
      <Input.Text Id="TelValARA" Label="هاتف" Style="Tel" />
      <Input.Text Id="MultiLineValARA" Label="تعليقات" IsMultiline="true" />
      <Action.Submit Title="يقدم" />
    </AdaptiveCard>
  </Action.ShowCard>
</Card>