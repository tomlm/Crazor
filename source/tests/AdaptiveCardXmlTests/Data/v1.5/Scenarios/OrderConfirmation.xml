<?xml version="1.0" encoding="utf-16"?>
<Card xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" Version="1.5">
  <TextBlock Wrap="true" Style="Heading">Please confirm your order:</TextBlock>
  <FactSet>
    <Fact Title="Name" Value="John Smith" />
    <Fact Title="Phone number" Value="(555) 555-5555" />
  </FactSet>
  <Container Spacing="Small">
    <FactSet Spacing="Small">
      <Fact Title="1x" Value="Steak" />
      <Fact Title="2x" Value="Side Rice" />
      <Fact Title="1x" Value="Soft Drink" />
    </FactSet>
  </Container>
  <Action.Execute Title="Place Order" Verb="" />
  <Action.Execute Title="Edit Order" Mode="secondary" Verb="">"edit"</Action.Execute>
  <Action.Execute Title="Save Order" Mode="secondary" Verb="">"save"</Action.Execute>
</Card>