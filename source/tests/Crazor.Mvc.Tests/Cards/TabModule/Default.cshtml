@inherits CardView

<Card Version="1.5">
    <TextBlock Size="Large">Counter: @Counter</TextBlock>

    <Action.Execute Title="+ Session" Verb="@nameof(OnIncrement)" Id="@nameof(OnIncrement)" />
</Card>

@functions {
    public int Counter { get; set; }

    public void OnIncrement()
        => this.Counter++;
}

